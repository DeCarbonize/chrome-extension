{
  "manifest_version": 2,
  "name": "Co2020",
  "description": "Your automatic carbon footprint calculator.",
  "version": "1.0.0",
  "icons": { "128": "assets/logo/logo_128.png" },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.ca/*",
        "https://www.amazon.com/*",
        "https://www.ebay.ca/*",
        "https://www.ebay.com/*"
      ],
      "js": ["src/content.js"]
    }
  ],
  "permissions": ["tabs", "tabCapture", "activeTab"]
}
